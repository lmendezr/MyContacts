<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >

    <EditText
        android:id="@+id/edit_address_name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_name" />

    <EditText
        android:id="@+id/edit_address_street_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_street" />

    <EditText
        android:id="@+id/edit_address_number_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_number"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_address_city_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_city" />

    <EditText
        android:id="@+id/edit_address_state_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_state" />

    <EditText
        android:id="@+id/edit_address_zip_code_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address_zip_code"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <Button
        android:id="@+id/delete_address_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:onClick="deleteAddress"
        android:text="@string/button_delete_address"
        android:textColor="@android:color/white" />

</LinearLayout>